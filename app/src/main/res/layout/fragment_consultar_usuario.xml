<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ConsultarUsuarioFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONSULTAR USUARIO"
            android:layout_margin="15dp"/>


        <EditText
            android:id="@+id/etDocumentoConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el Documento"
            android:layout_margin="5dp"/>



        <TextView
            android:id="@+id/etNombreConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <TextView
            android:id="@+id/etPrfecionConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:id="@+id/imagenId"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/nodisponible"
            android:layout_gravity="center_horizontal"
            />


        <Button
            android:id="@+id/btnConsultar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consultar"/>




    </LinearLayout>

</FrameLayout>